<Window x:Class="_260213.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_260213"
        mc:Ignorable="d"
        Title="Minesweeper" Height="240" Width="420" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Time passed:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.574,-0.977" Height="54" Width="190" FontSize="30"/>
        <TextBox Name="timePassed" HorizontalAlignment="Left" Margin="200,10,0,0" TextWrapping="NoWrap" Text="0" VerticalAlignment="Top" Width="190" Height="54" RenderTransformOrigin="-1.574,-0.977" FontSize="37" IsEnabled="False"/>
        <Label Content="Flags left:" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.574,-0.977" Height="54" Width="190" FontSize="30"/>
        <TextBox Name="flagsLeft" HorizontalAlignment="Left" Margin="200,64,0,0" TextWrapping="NoWrap" Text="0" VerticalAlignment="Top" Width="190" Height="54" RenderTransformOrigin="-1.574,-0.977" FontSize="37" IsEnabled="False"/>
        <Grid  Height="71" Margin="10,134,205,0" VerticalAlignment="Top">
            <TextBox x:Name="txtNum" x:FieldModifier="private" FontSize="35" Text="7" TextChanged="txtNum_TextChanged" Margin="10,10,125,10" />
            <Button x:Name="cmdUp" x:FieldModifier="private" FontSize="15" Padding="0,-4,0,0" Content="▲" Click="cmdUp_Click" Margin="130,10,10,10" />
            <Button x:Name="cmdDown" x:FieldModifier="private" FontSize="15" Padding="0,-4,0,0" Content="▼" Click="cmdDown_Click" Margin="70,10,70,10" />
        </Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,112,0,0" TextWrapping="Wrap" Text="Number of mines:" FontSize="20" VerticalAlignment="Top" Height="32" Width="190"/>
        <Button Content="Start" FontSize="20" HorizontalAlignment="Left" Margin="210,147,0,0" VerticalAlignment="Top" Width="90" Height="45"/>
        <Button Content="Reset" FontSize="20" HorizontalAlignment="Left" Margin="305,147,0,0" VerticalAlignment="Top" Width="95" Height="45"/>
    </Grid>
</Window>
